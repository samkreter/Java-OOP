	public void searchMenu(){
		Scanner inputScanner = new Scanner(System.in);
		String input;
		do{
			System.out.println("Please enter your query (q to exit): ");
			input = inputScanner.nextLine();
		}while(!input.equals("q"));
		
		inputScanner.close();
	}
	
